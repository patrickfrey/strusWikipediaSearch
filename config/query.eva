TERM sentence ".":punctuation;

SELECT weighted;
EVAL bm25( k1=0.75, b=2.1, avgdoclen=10000 ) [ weighted ];

SUMMARIZE title = attribute( name=title );
SUMMARIZE date = attribute( name=date );
SUMMARIZE contributor = attribute( name=contributor );
SUMMARIZE summary = matchphrase( type=orig, phraselen=10, sumlen=30, struct=sentence, match=weighted );
SUMMARIZE match = matchpos( match=weighted );

