#include "wikipedia.ana"

[PatternLexem]
    lexem = text word /mediawiki/page/revision/text//();

[PatternMatch]
    idxconcept  = pattern_conceptfeat_doc.txt;
    idxfeature  = pattern_searchfeat_doc.txt;
    namefeature = pattern_forwardfeat_doc.txt;

[SearchIndex]
    vcidx <- idxconcept;
    vfidx <- idxfeature;

[ForwardIndex]
    vfname <- namefeature;



